  code metapost
    
    #input "C:/Users/henry_bennett/Documents/Personal/Surveying/Philippines/Baggao/bluewater-v7/code/_grid_x_hair_to_continuos_line.mp"
    #input "C:/Users/henry_bennett/Documents/Personal/Surveying/Philippines/Baggao/bluewater-v7/code/_scalebar_large_format"
    #input "C:/Users/henry_bennett/Documents/Personal/Surveying/Philippines/Baggao/bluewater-v7/code/_legend_large_format"
    
    
    # code to change the colour of the water
    def a_water (expr p) =
        T:=identity;
        thfill p withcolor (0.1, 0.2, 0.8);
    enddef;
    
    # change centre line to continuous
    def l_survey_cave (expr p) =
        draw p withpen PenD withcolor (0.6, 0.6, 0.6);
    enddef;
    
    #change the size of the default fonts
    #fonts_setup(<tinysize>,<smallsize>,<normalsize>,<largesize>,<hugesize>);
    #origional fonts_setup(6,8,10,14,20);
    fonts_setup(6,8,30,54,80);
  
  endcode
  
endlayout
