layout plan
  scale 1 200
  base-scale 1 200
  scale-bar 20 m
  
  colour map-fg [97]
  
  language en
  statistics topo-length off
  statistics explo-length off
  statistics topo all

  map-comment "Blue Water Sitio, Baggao, Cagayan<br>18 1'2.78 N<br>121 59'31.68 E<br>Bristol Exploration Club<br>BCRA Grade 5C<br>Data: www.github.com/speleo/SpeleoPhilippines<br>Archive: www.cave-registry.org.uk/svn/Philippines/<br>"
 
  doc-author   "Henry Bennett"
  doc-keywords "Naganakan Cave Baggao Philippines"
    doc-subject  "Survey of Naganakan Cave 2014"
  doc-title    "Naganakan Cave Survey Bristol Exploration Club 2014"
  
  debug off
  transparency on
  opacity 80
  map-header 100 100 nw
  #overlap 10 cm

  symbol-set BCRA
  symbol-hide group cave-centreline
  symbol-hide special north-arrow
  symbol-assign line slope SKBB
  
  legend on
  legend-columns 2
  legend-width 15 cm
  #colour-legend on
  grid bottom
  grid-coords border
  #sketches on

  ### index of file options from _layouts.mp
