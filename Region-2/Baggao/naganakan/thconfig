encoding  utf-8
select naganakan
source naganakan.th
# Change name to the main therion file

#Surveys to output
#-----------------
  select naganakanM@naganakan
  export map -proj plan -layout local -o .\output\Naganakan.pdf
  #export map -proj plan -layout local -o .\output\debug.pdf
  #Produces plan of cave, on a single sheet

  export model -fmt kml -o .\output\Naganakan.kml
  export map -fmt kml -o .\output\Naganakan-map.kml

  select naganakanME@naganakan
  export map -proj extended -layout local -o .\output\NaganakanEe.pdf

  export model -fmt survex -o .\output\Naganakanth.3d
  #Survex file showing centre line only

  export model -o .\output\Naganakan.lox
  #3d therion model to be viewed in the therion viewer

  export map -proj plan -o .\output\Naganakan_Walls.3d
  #Survex file showing walls only

layout local
  scale 1 150
  base-scale 1 150
  scale-bar 20 m
  
  #Foreground color - turn on altitdude to see various heights
  colour map-fg [80 80 80]
  #color map-fg altitude
  #colour map-bg [70 90 70]
  
  language en
  statistics topo-length off
  statistics explo-length off
  statistics topo all

  map-comment "Blue Water Sitio, Baggao, Cagayan<br>18 1'2.78 N<br>121 59'31.68 E<br>Bristol Exploration Club<br>BCRA Grade 5C<br>Data: www.cave-registry.org.uk/svn/Philippines/<br>"
 
  doc-author   "Henry Bennett"
  doc-keywords "Naganakan Cave Baggao Philippines"
  doc-subject  "Survey of Naganakan Cave 2014"
  doc-title    "Naganakan Cave Survey Bristol Exploration Club 2014"
  
  debug off
  transparency on
  opacity 80
  map-header 100 100 nw
  #overlap 10 cm

  symbol-set BCRA
  symbol-hide group cave-centreline
  symbol-assign line slope SKBB
  
  legend on
  legend-columns 2
  legend-width 15 cm
  #colour-legend on
  grid bottom
  grid-coords border
  #sketches on

###################################################################
