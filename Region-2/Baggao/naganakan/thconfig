  code tex-map
  \copyrights={Copyleft Creative Commons ShareAlike}
  \cavename={Naganakan}
    \def\maplayout{
    \legendbox{65}{100}{NW}{
      \legendwidth 35 cm
      \the\legendcontent
      }
    \legendbox{10}{20}{NW}{
      \legendwidth 35 cm
      \legendtextsize={\size[24]}
      \hsize=\legendwidth
      \input th_legend
      }
    \legendbox{37.5}{90}{NW}{
      \northarrow
      }
    \legendbox{35}{65}{NW}{
      \scalebar
      }
  #\legendbox{0} {100} {S}  {\loadpicture{../../../images/sitckers-type4.jpg}}  
  \legendbox{40} {5} {nw} {\loadpicture{../../../images/Logo_BEC_400.png}}  
  #\legendbox{55} {5} {nw} {\loadpicture{../../../images/Logo_BC_1250.png}}
  \legendbox{65} {5} {nw} {\loadpicture{../../../images/Logo_SMOC_600.png}}
  }  


   #http://therion.speleo.sk/wiki/doku.php/faq#how_to_change_the_size_of_title_font_on_map
    \legendcontent={%
      \hsize=\legendwidth
      \ifnortharrow\vbox to 0pt{\line{\hfil\northarrow}\vss}\fi
      \edef\tmp{\the\cavename} \ifx\tmp\empty \else
         {\size[70]\the\cavename} \vskip1cm
      \fi
      #\ifscalebar\scalebar\vskip1cm\fi
      {\rightskip=0pt plus 3em\parskip=3bp
        \edef\tmp{\the\comment} \ifx\tmp\empty \else
           {\size[24]\the\comment} \par\medskip
         \fi
      \everypar{\hangindent=2em\hangafter=1}
      \edef\tmp{\the\cavelength} \ifx\tmp\empty \else
        {\size[24]\si\the\cavelengthtitle: \ss\the\cavelength\par}
      \fi
      \edef\tmp{\the\cavedepth} \ifx\tmp\empty \else
        {\size[24]\si\the\cavedepthtitle: \ss\the\cavedepth\par}
      \fi
      \edef\tmp{\the\exploteam} \ifx\tmp\empty \else
        {\size[24]\si\the\explotitle:
        \ss\the\exploteam\quad\si\the\explodate\par}
      \fi
      \edef\tmp{\the\topoteam} \ifx\tmp\empty \else
        {\size[24]\si\the\topotitle: \ss\the\topoteam\quad\si\the\topodate\par}
      \fi
      \edef\tmp{\the\cartoteam} \ifx\tmp\empty \else
        {\size[24]\si\the\cartotitle:
        \ss\the\cartoteam\quad\si\the\cartodate\par}
      \fi
      \edef\tmp{\the\copyrights} \ifx\tmp\empty \else
        {\size[24]\ss\the\copyrights\par}
      \fi
     }
  }
  
  endcode


endlayout
