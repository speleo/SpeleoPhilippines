encoding  utf-8
source s1.th
# Change name to the main therion file


#Surveys to output
#-----------------

export map -proj plan -layout local -o .\output\area_51.pdf
#Produces plan of cave, on a single sheet

#export map -proj extended -layout local -o .\output\area_51_elevation.pdf

export model -fmt survex -o .\output\area_51.3d
#Survex file showing centre line only

export map -fmt kml -proj plan -layout local -o .\output\S1.kml

#export model -o s1.lox
#3d therion model to be viewed in the therion viewer

#export map -proj plan -o .\output\s1_Walls.3d
#Survex file showing walls only

layout local-old
debug off
map-header 0 0 ne
#symbol-hide group cave-centreline
endlayout

layout local
  scale 1 150
  base-scale 1 150
  scale-bar 20 m
  
  #Foreground color - turn on altitdude to see various heights
  colour map-fg [80 80 80]
  #color map-fg altitude
  #colour map-bg [70 90 70]
  
  language en
  statistics topo-length off
  statistics topo all
  statistics explo-length off
  
  map-comment "Baggao, Cagayan<br>18° 1'15.52 N<br>121°59'53.82 E<br>Bristol Exploration Club<br>BCRA Grade 5D<br>Data: www.cave-registry.org.uk/svn/Philippines/<br>"
  
  doc-author   "Henry Bennett"
  doc-keywords "Bluewater Cave Baggao Philippines"
  doc-subject  "Survey of Bluewater Cave 2014"
  doc-title    "Bluewater Cave Survey Bristol Exploration Club 2014"
      
  debug off
  transparency on
  opacity 80
  map-header 100 100 nw
  #overlap 10 cm

  symbol-set BCRA
  symbol-hide group cave-centreline
  symbol-assign line slope SKBB
  
  legend on
  legend-columns 2
  legend-width 15 cm
  #colour-legend on
  grid bottom
  grid-coords border
  #sketches on
  
###################################################################
